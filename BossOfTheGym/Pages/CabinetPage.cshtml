@page
@model BossOfTheGym.Pages.CabinetPageModel
@{
    ViewData["Title"] = "Cabinet";
}

@using Microsoft.AspNetCore.Http

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/css/StyleForLogRegPage.css" />
}

@section Scripts {
    <script src="~/js/ScriptForParallax.js"></script>
}

@if(HttpContext.Session.Keys.Count() == 0)
{
    <div class="background"></div>
    
    <div class="form-card">
        <div class="form-card__wrapper container pt-5 pb-5 ps-1 pe-1">
            <div class="card-header__wrapper container-fluid d-flex justify-content-center">
                <h1 class="text-piedra">Welcome to our GYM!</h1>
            </div>
            <hr />
            <div class="card-body__wrapper container-fluid">
                <form method="post">
                    <div class="card-body__input container-fluid">
                        <div class="form-group">
                            <label for="nicknameId">Your nickname:</label>
                            <input id="nicknameId" class="form-control" name="nickname" type="text" />
                        </div>
                        <div class="form-group">
                            <label for="passwordId">Your password:</label>
                            <input id="passwordId" class="form-control" name="password" type="password"/>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-8">
                            <a asp-page="RegistrationPage" class="reg-link">Are your slave?</a>
                        </div>
                        <div class="col-4 d-flex justify-content-end">
                            <button class="btn btn-outline-dark" type="submit" asp-page-handler="Login">Log In</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
else 
{

}
